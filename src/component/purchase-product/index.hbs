{{#with data}}
<div class="product-card">
  <img src="{{img}}" alt="{{title}}" class="product-card__image">
  <h2 class="product-card__title"> {{title}} </h2>
  <p class="product-card__subtitle">{{descriprion}} </p>

  {{#each category}}
  <span class="product-card__category product-card__category--{{id}}">{{text}} </span>
  {{/each}}
  <a href="/purchase-product?id={{id}}">
    {{>button text="Купити зараз: " price = price}}
  </a>
</div>
{{/with}}