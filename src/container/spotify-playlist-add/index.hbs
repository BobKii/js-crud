    <h1 class="title title--center">Додати до плейлиста</h1>

    <ul class="track-list">
      {{#each allsongs}}
      <li class="track">
        <img src="{{image}}" alt="{{name}}">
        <div class="track__content">
          <strong class="track__name">{{name}}</strong>
          <em class="track__author">{{author}}</em>
        </div>
        <form method="POST" action="/spotify-playlist-add" class="form">
          <a href="spotify-playlist-add?playlistId={{playlistId}}&trackId={{id}}">
            {{!-- <a href="spotify-playlist-add-choice?playlistId={{../playListId}}&trackId={{id}}"></a> --}}
            <img src="/svg/add_button.svg">
