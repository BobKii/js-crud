{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<main>

  <section>
    <div class="form">
      <h1 class="form__title">Інформація про товар</h1>
      {{#with data}}
      <form method="POST" action="/product-edit">
        <div class="form__content">
          <div class="form__content-col">
            <div class="form__field">
              <label for="name" class="form__label">Назва товару:</label>
              <input type="name" name="name" class="form__input" value="{{name}}">
            </div>
            <div class="form__field">
              <label for="price" class="form__label">Ціна:</label>
              <input type="price" name="price" class="form__input" value="{{price}}">
            </div>
            <div class="form__field">
              <label for="id" class="form__label">ID:</label>
              <input readonly type="id" name="id" class="form__input form__readonly" value="{{id}}">
            </div>
          </div>
          <div class="form__field">
            <label for="description" class="form__label">Короткий опис товару:</label>
            <textarea type="description" name="description" class="form__input" rows="2"> {{description}} </textarea>
          </div>
          <div class="form__button-area">
            <button class="form__button form__button-save">Зберегти оновлення</button>
            <a href="/product-delete?id={{id}}" class="form__button form__button-delete">Видалити товар</a>
            {{!-- <a href="#" class="form__button form__button-delete">Видалити товар</a> --}}
            <a href="/product-list" class="form__button form__button-return">до списку товарів</a>

          </div>
        </div>
      </form>
      {{/with}}
    </div>
  </section>
</main>



